.git-commit-container {
  max-width: 1280px;
  min-width: 1024px;
  max-height: 720px;
  min-height: 576px;
  display: flex;
  flex-direction: column;
  
  .git-commit-body {
    flex: 1;
    display: flex;

    .filetree-node {
      & > span {
        margin: 0px 5px;  
      }  
    }
    .git-commit-files {
      width: 30%;
      height: 100%;
      border-right: 1px solid #ccc;
      .active {
        background-color: $background-color-highlight;  
      }
    }

    .git-commit-diff {
      flex: 1;  
    }
  }

  .git-commit-footer {
    width: 100%;
  }
}
